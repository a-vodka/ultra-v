	double Ach_buf[FUR_MAX];  // выделяем буфер для канала А
	double Bch_buf[FUR_MAX];  // выделяем буфер для канала Б
	double A_Amp[FUR_MAX/2];
	double A_Phase[FUR_MAX/2];

	double B_Amp[FUR_MAX/2];
	double B_Phase[FUR_MAX/2];


